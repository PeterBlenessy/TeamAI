{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "windows-capabilities",
  "description": "Windows specific permissions",
  "platforms": ["windows"],
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "setx",
          "cmd": "setx",
          "args": [
            "OLLAMA_ORIGINS",
            "*"
          ]
        },
        {
          "name": "taskkill",
          "cmd": "taskkill",
          "args": [
            "/IM",
            "ollama.exe",
            "/F"
          ]
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C",
            "start",
            "",
            "ollama"
          ]
        }
      ]
    }
  ]
}
